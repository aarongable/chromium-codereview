{
  "manifest_version": 2,

  "name": "ChromeReview",
  "version": "0.1",

  "description": "Making code review amazing.",

  "author": "esprehn",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "web_accessible_resources": [
    "ui/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://codereview.chromium.org/*"],
      "js": [
        "ui/sugar.js",
        "ui/base.js",
        "ui/resources.js",
        "ui/model/issue.js",
        "ui/model/issue_list.js",
        "ui/model/issue_message.js",
        "ui/model/patch_file.js",
        "ui/model/patch_file_message.js",
        "ui/model/patch_set.js",
        "ui/model/try_job_result.js",
        "ui/model/user.js",
        "ui/main.js"
      ],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "https://codereview.chromium.org/*"
  ]
}
